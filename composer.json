{
    "name": "techblog/app",
    "description": "TechBlog - Blog de Tecnologia Moderno",
    "license": "MIT",
    "type": "project",
    "homepage": "https://techblog.com",
    "support": {
        "email": "suporte@techblog.com",
        "source": "https://github.com/techblog/app"
    },
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.0",
        "illuminate/database": "^12.21",
        "illuminate/events": "^12.21"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "serve": "php spark serve",
        "optimize": "php spark optimize"
    }
}
